<% layout('/layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row">
    <div class="col-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1559521783-1d1599583485?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80"
          alt=""
          class="card-img-top"
        />
        <div class="card-body d-grid">
          <h5 class="card-title text-center">내정보 수정하기</h5>
          <form
            action="/mypage/<%=user._id %>?_method=PUT"
            method="POST"
            class="validated-form"
            novalidate
          >
            <div class="mb-3">
              <div>아이디 : <span><%= user.userid %></span></div>
              <label class="form-label" for="userid">아이디</label>
              <input
                class="form-control"
                type="text"
                name="userid"
                id="userid"
                value="<%= user.userid %>"
                autofocus
                readonly
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="username">이름</label>
              <input
                class="form-control"
                type="text"
                name="username"
                id="username"
                value="<%= user.username %>"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="username">이메일</label>
              <input
                class="form-control"
                type="email"
                name="email"
                id="email"
                value="<%= user.email %>"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password1">비밀번호수정</label>
              <input
                class="form-control"
                type="password"
                name="password1"
                id="password1"
                value="<%= user.password %>"
                pattern="(?=.*\d)(?=.*[a-z]).{8,}"
                title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password2">비밀번호확인</label>
              <input
                class="form-control"
                type="password"
                name="password2"
                id="password2"
                value="<%= user.password %>"
                pattern="(?=.*\d)(?=.*[a-z]).{8,}"
                title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-success">수정하기</button>
            </div>
          </form>
        </div>
        <div id="message">
          <div class="ms-2">비밀번호 입력 안내</div>
          <p id="letter" class="invalid ms-4">: 소문자,숫자 포함 8자 이상</p>
        </div>
      </div>
    </div>
  </div>
</div>
