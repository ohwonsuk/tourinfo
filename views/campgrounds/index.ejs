<% layout('/layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1>전제 관광지</h1>
<div><a href="/campgrounds/new">관광지 추가</a></div>
<% for (let campground of campgrounds) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(campground.images.length) { %>
      <img
        crossorigin="anonymous"
        class="img-fluid"
        src="<%= campground.images[0].url %>"
        alt=""
      />
      <% } else { %>
      <img
        class="img-fluid"
        src="https://res.cloudinary.com/dc2gmdv7u/image/upload/v1695652195/PeterCamp/xvn0ax7patuy8o74oy5d.jpg"
        alt=""
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campground.trrsrtNm %></h5>
        <p class="card-text"><%= campground.trrsrtIntrcn %></p>
        <p class="card-text">
          <small class="text-muted"><%= campground.rdnmadr %></small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>"
          >세부정보</a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
  const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
</script>
<script src="/javascripts/clusterMap.js"></script>
