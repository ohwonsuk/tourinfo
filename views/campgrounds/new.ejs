<% layout('/layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">관광지명</label>
        <input
          class="form-control"
          type="text"
          name="campground[trrsrtNm]"
          id="title"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">위치</label>
        <input
          class="form-control"
          type="text"
          name="campground[rdnmadr]"
          id="location"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="instituion">관리기관</label>
        <div class="input-group">
          <!-- <span class="input-group-text" id="price-label">$</span> -->
          <input
            type="text"
            class="form-control"
            id="institution"
            placeholder="기관명을 입력하세요"
            aria-label="기관명"
            aria-describedby="instituion"
            name="campground[institutionNm]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">소개정보</label>
        <textarea
          class="form-control"
          type="text"
          name="campground[trrsrtIntrcn]"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <div class="input-group mb-3">
          <input
            type="file"
            class="form-control"
            id="image"
            name="image"
            multiple
          />
          <label class="input-group-text" for="image">업로드</label>
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">저장하기</button>
      </div>
      <div><a href="/campgrounds/?page=1">전체 관광지</a></div>
    </form>
  </div>
</div>
